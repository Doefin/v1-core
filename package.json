{
  "name": "@Doefin/v1-core",
  "description": "V1 Core smart contracts of the Doefin options trading protocol",
  "license": "BUSL-1.1",
  "version": "1.1.2",
  "author": {
    "name": "Predexyo",
    "url": "https://predexyo.com/"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.3.0",
    "@openzeppelin/contracts": "4.9.2",
    "@prb/math": "4.0.x",
    "axios": "^1.7.7",
    "delay": "^6.0.0"
  },
  "devDependencies": {
    "@prb/test": "0.6.4",
    "forge-std": "github:foundry-rs/forge-std#v1.5.6",
    "husky": "^9.1.1",
    "prettier": "^2.8.8",
    "solady": "0.0.129",
    "solarray": "github:evmcheb/solarray#a547630",
    "solhint": "^4.0.0"
  },
  "files": [
    "artifacts",
    "src",
    "test/utils",
    "CHANGELOG.md",
    "LICENSE-GPL.md"
  ],
  "keywords": [
    "asset-distribution",
    "asset-streaming",
    "blockchain",
    "cryptoasset-streaming",
    "cryptoassets",
    "ethereum",
    "foundry",
    "money-streaming",
    "real-time-finance",
    "Doefin",
    "Doefin-v1",
    "smart-contracts",
    "solidity",
    "token-distribution",
    "token-streaming",
    "token-vesting",
    "vesting",
    "web3"
  ],
  "peerDependencies": {
    "@prb/math": "4.0.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/Doefin/v1-core",
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "build:smt": "FOUNDRY_PROFILE=smt forge build",
    "clean": "rm -rf artifacts broadcast cache docs out out-optimized out-svg",
    "format": "forge fmt",
    "gas:report": "forge test --gas-report --mp \"./test/integration/**/*.sol\" --nmt \"test(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot": "forge snapshot --mp \"./test/integration/**/*.sol\" --nmt \"test(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot:optimized": "bun run build:optimized && FOUNDRY_PROFILE=test-optimized forge snapshot --mp \"./test/integration/**/*.sol\" --nmt \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint \"{script,src,test}/**/*.sol\"",
    "prepack": "bun install && bash ./shell/prepare-artifacts.sh",
    "prepare": "husky",
    "prettier:check": "prettier --check \"**/*.{json,md,svg,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,svg,yml}\"",
    "solidity:format": "forge fmt",
    "test": "forge test",
    "test:lite": "FOUNDRY_PROFILE=lite forge test",
    "test:optimized": "bun run build:optimized && FOUNDRY_PROFILE=test-optimized forge test"
  }
}
